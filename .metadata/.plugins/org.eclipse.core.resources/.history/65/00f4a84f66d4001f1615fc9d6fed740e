package selfstudy;

public class Mix {

}

class asdasd {             //aaaaa        bbbbb
	public String solution(String str1, String str2) {
		String answer = "";
		
		char[] arr1 = (str1.toCharArray()); // a a a a a
		char[] arr2 = (str2.toCharArray()); // b b b b b
		
		for(int i = 0; i < arr1.length; i++) {
			answer += (arr1[i]);
			answer += (arr2[i]);
		}

		return answer;
	}
}

package selfstudy;

import java.util.Arrays;

public class Notepad {

}


class Solution {
    public int solution(int[] sides) {
        int answer = 0;
        int max = 0;
        int sum = 0;
        
        // 3 6 2
        for(int i = 0; i < sides.length; i++) {
        	if(sides[i] > max) {
        		max = sides[i];
        	}
        	sum += sides[i];
        }
        
        if((sum-max) > max) {
        	answer = 1;
        } else {
        	answer = 2;
        }
        
        
        return answer;
    }
}
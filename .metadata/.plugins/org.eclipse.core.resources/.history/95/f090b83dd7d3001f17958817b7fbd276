package quiz13;

public class DropShip extends Unit {

	int space;
	
	DropShip() {
		hp = 60;
		armor = 1;
		int space = 8;
		//int[] space = new int[8];
	}
	
	void ride(Unit u) {
		System.out.println(u + "유닛을 수송칸에 태웁니다.");
		if(u == Marine) {
			this.space -= 1;
		} else if(space == 0) {
			System.out.println("수송 공간이 부족합니다.");
		}
		
		if(u == SidgeTank) {
			this.space -= 4;
		} else if(space < 4) {
			System.out.println("수송 공간이 부족합니다.");
		}
	}
	
}

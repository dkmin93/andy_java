package quiz04sol;

public class ArrayPrint {
							//    0 1 2
	void toArray(int[] arr) { // {1,2,3}
		System.out.print("[");
		for(int i = 0; i < arr.length; i++) {
			if(i != arr.length -1) {
				System.out.print(arr[i] + ", ");
			} else if (i == arr.length -1) {
				System.out.print(arr[i]);
			}
		}
		System.out.println("]");
	}
	
	void toArray(char[] arr) { // {1,2,3}
		System.out.print("[");
		for(int i = 0; i < arr.length; i++) {
			if(i != arr.length -1) {
				System.out.print(arr[i] + ", ");
			} else if (i == arr.length -1) {
				System.out.print(arr[i]);
			}
		}
		System.out.println("]");
	}
	
	void toArray(String[] arr) { // {1,2,3}
		System.out.print("[");
		for(int i = 0; i < arr.length; i++) {
			if(i != arr.length -1) {
				System.out.print(arr[i] + ", ");
			} else if (i == arr.length -1) {
				System.out.print(arr[i]);
			}
		}
		System.out.println("]");
	}
	

}

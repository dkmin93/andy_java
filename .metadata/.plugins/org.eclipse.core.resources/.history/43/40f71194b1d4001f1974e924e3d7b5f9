package selfstudy;

import java.util.Arrays;

public class Notepad {

}

class Solution {
    public int solution(String str1, String str2) {
        int answer = 0;
        int x = 0;
        
        if(str1.indexOf(str2) >= 0) {
        	answer = 1;
        } else if(str1.indexOf(str2) == -1) {
        	answer = 2;
        }
        
        return answer;
    }
}
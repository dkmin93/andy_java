package quiz13;

public class DropShip extends Unit {

	int space;
	int[] ds = new int[8];
	
	DropShip() {
		System.out.println("Can I take your order?");
		hp = 150;
		armor = 2;
		space = 8;
		
	}
	
	void ride(Unit u) {
		System.out.println(u + "유닛을 수송칸에 태웁니다.");
		if(u.weight == 1) {
			this.space -= 1;
		} else if(space == 0) {
			System.out.println("수송 공간이 부족합니다.");
		}
		
		if(u.weight == 4) {
			this.space -= 4;
		} else if(space < 4) {
			System.out.println("수송 공간이 부족합니다.");
		}
	}
	
}

package quiz13;

public class SiegeTank extends Unit {

	int attack;

	SiegeTank() {
		hp = 150;
		armor = 2;
		attack = 30;
	}
	
	void changeMode() {
		System.out.println("공성모드로 전환합니다. attack이 40 증가합니다.");
		this.attack += 40 ;
		stop();
	}
	
	void info() {
		System.out.println("hp:" + this.hp);
		System.out.println("attack:" + this.attack);
		System.out.println("armor:" + this.armor);
	}

}

package day02;

public class CastingEx03 {
	public static void main(String[] args) {
		
		char c = 'A';
		int i = 2;
		
		
		//1.서로 다른 타입에서 연산의 결과는 큰 타입을 따라간다.
		char cc = (char)(c + i);
		System.out.println(cc);
		
		int j = 10;
		double d = 3.14;
		int result = (int)(j + d);
		
		//
		
		byte a = 10;
		byte b = 20;
		byte result2 = a + b;
	}
}

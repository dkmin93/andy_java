package quiz11;

public class Sorceress extends Player {

	//생성자 : 이름을 전달 받아서 hp는 500 mp는 1000으로 초기화
	//블리자드 : 매개변수로 Player배열 받는다. 스킬을 사용하면 나의 mp가 200소모. 마나가 부족하면 스킬사용불가
	//배열안에 들어있는 모든 객체에 5~15사이의 랜덤한 피해를 1번 발생
	//타격당하면 체력을 소모
	//타격당한 플레이어의 이름 출력
	
	Sorceress(String name) {
		this.name = name;		
		hp = 500;
		mp = 1000;
	}
	
	public void Smash(Player p) {
		if(mp <100) {
			System.out.println("마나가 부족하여 스킬을 사용할 수 없습니다");
		}  else {
			mp -= 100;
			p.hp -= 100;
			System.out.println("강타를 사용하였습니다. " + p +"의 hp가 100 감소했습니다.");
			System.out.println("현재 " + p + "의 체력은 " + p.hp + "입니다.");
		}
	}
	
	public void blizzard() {
		
		
	}

}

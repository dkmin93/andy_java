package quiz13;

public class Unit {
	
	int x = 0;
	int y = 0;
	int hp;
	int armor;
	
	void location() {
		System.out.println("x:" + x + " y:"+ y);
	}

	void move(int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	void stop() {
		System.out.println("위치가 고정됩니다.");
	}
	
	void info() {
		System.out.println("hp:" + this.hp);
		System.out.println("armor:" + this.armor);
	}
}

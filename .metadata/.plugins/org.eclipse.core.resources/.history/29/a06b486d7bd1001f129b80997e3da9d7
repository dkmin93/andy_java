package quiz05;

public class Calculator {
	
	int result;
	double pi;
	
	void add(int a) {
		System.out.println("입력한 값을 결과값에 누적시킵니다");
		System.out.println(result += a);
	}
	
	void sub(int b) {
		System.out.println("입력한 값을 결과값에서 차감합니다");
		System.out.println(result -= b);
		
	}
	
	int circle(int r) {
		result = (int)(pi * r * r);
		return result;
	}

}
